{
  "name": "@astrox/ord-snap",
  "version": "0.0.16",
  "private": false,
  "main": "build/index.js",
  "files": [
    "dist",
    "snap.manifest.json"
  ],
  "author": "AstroX <dev@astrox.network>",
  "license": "(Apache-2.0 AND MIT)",
  "homepage": "https://github.com/AstroxNetwork",
  "keywords": [
    "dfinity",
    "ic",
    "icp",
    "metamask",
    "snap",
    "dapp"
  ],
  "description": "Adapter for installing OrdSnap",
  "scripts": {
    "build": "pnpm run build:tsc && pnpm run build:snap",
    "build:tsc": "tsc -p tsconfig.build.json --pretty --outDir build",
    "build:snap": "pnpm build:snap:bundle && pnpm build:snap:postprocess && pnpm build:snap:manifest",
    "build:snap:bundle": "mm-snap build --verboseErrors  --stripComments --eval false",
    "build:snap:postprocess": "node ./post-process.js",
    "build:snap:manifest": "mm-snap manifest --fix",
    "build:snap:eval": "mm-snap eval -b dist/bundle.js --verboseErrors",
    "build:webpack": "NODE_ENV=production webpack",
    "watch": "concurrently  --raw --kill-others \"pnpm run watch:tsc\" \"pnpm run watch:snap\" \"pnpm run serve\"",
    "watch:tsc": "pnpm run build:tsc --watch",
    "watch:snap": "mm-snap watch --sourceMaps -s build/index.js",
    "serve": "mm-snap serve",
    "test": "pnpm run test:unit",
    "test:unit": "mocha --colors -r ts-node/register \"test/unit/**/*.test.ts\"",
    "build:snap:bundle:mm-snap": "mm-snap build --sourceMaps --strip --verboseErrors --eval false",
    "eval:snap": "mm-snap eval -b dist/bundle.js --verboseErrors",
    "prepublish": "pnpm run build"
  },
  "dependencies": {
    "@astrox/ord-snap-types": "^0.0.16",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.20.2",
    "@bitcoinerlab/secp256k1": "^1.0.2",
    "@dfinity/agent": "0.15.4",
    "@dfinity/candid": "^0.15.4",
    "@dfinity/identity": "^0.15.4",
    "@dfinity/identity-secp256k1": "^0.15.4",
    "@dfinity/principal": "^0.15.4",
    "@metamask/key-tree": "^7.0.0",
    "@metamask/key-tree-old": "npm:@metamask/key-tree@^3.0.1",
    "@metamask/snaps-browserify-plugin": "^0.31.0",
    "@metamask/snaps-cli": "^0.18.1",
    "@metamask/snaps-types": "^0.26.2",
    "@metamask/snaps-ui": "^0.31.0",
    "@metamask/snaps-webpack-plugin": "^0.31.0",
    "@noble/secp256k1": "^1.7.0",
    "@types/deepmerge": "^2.2.0",
    "@types/secp256k1": "^4.0.3",
    "axios": "^1.3.4",
    "babel-loader": "^8.2.2",
    "bignumber.js": "^9.1.1",
    "bip32": "^2.0.6",
    "bitcoinjs-lib": "^6.1.0",
    "bitcore-lib": "^10.0.0",
    "brfs": "^2.0.2",
    "bs58check": "^3.0.1",
    "deepmerge": "^4.2.2",
    "ecpair": "^2.1.0",
    "secp256k1": "^4.0.3",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.1",
    "typescript": "^4.6.3",
    "uint8array-tools": "^0.0.7",
    "wasm-module-webpack-plugin": "^3.0.0",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.3.1"
  },
  "publishConfig": {
